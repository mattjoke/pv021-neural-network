{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "main.cpp",
        "-o",
        "${fileDirname}/main"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "Cleanup",
      "command": "rm",
      "args": ["${fileDirname}/main"]
    }
  ],
  "version": "2.0.0"
}
